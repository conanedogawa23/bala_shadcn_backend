{
  "name": "bala-visio-backend",
  "version": "1.0.0",
  "description": "Backend API for Bala Visio clinic management system with MSSQL to MongoDB migration",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "migrate:clinics": "ts-node src/migrations/001_migrate_clinics.ts",
    "migrate:clients": "ts-node src/migrations/002_migrate_clients.ts",
    "migrate:synthetic": "ts-node src/migrations/003_generate_synthetic_data.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": ["clinic", "management", "api", "mongodb", "express", "typescript"],
  "author": "Bala Visio Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "express-mongo-sanitize": "^2.2.0",
    "dotenv": "^16.3.1",
    "winston": "^3.11.0",
    "mssql": "^10.0.1",
    "crypto": "^1.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "@types/mssql": "^9.1.5",
    "typescript": "^5.3.3",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
